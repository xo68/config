{
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.verticalScrollbarSize": 0,
    "editor.cursorBlinking": "solid",
    "editor.scrollbar.horizontal": "hidden",
    "editor.tabSize": 4,
    "editor.cursorSurroundingLines": 10,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.fontSize": 14,
    "editor.lineHeight": 1.35,
    "breadcrumbs.enabled": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.colorTheme": "GitHub Dark Dimmed",
    "terminal.integrated.fontFamily": "MesloLGS NF",
    "security.workspace.trust.untrustedFiles": "open",
    "git.openRepositoryInParentFolders": "never",

    // Vim
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "vim.leader": "<space>",
    "vim.incsearch": true,
    "vim.statusBarColorControl": false,
    "vim.changeWordIncludesWhitespace": true,
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.ignorecase": true,
    "vim.easymotion": true,
    "vim.surround": false,
    "vim.sneak": false,
    "vim.camelCaseMotion.enable": false,
    "vim.useCtrlKeys": true,
    // "vim.handleKeys": {
    // "<C-+>": false,
    // "<C-f>": false
    // },

    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["K"],
            "after": ["g", "h"]
        },
        {
            "before": ["<leader>", "p"],
            "after": [],
            "commands": [{ "command": "workbench.action.quickOpen" }]
        },
        {
            "before": ["<leader>", "o"],
            "after": [],
            "commands": [{ "command": "workbench.action.quickOpen" }]
        },
        {
            "before": ["<leader>", "v"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.splitEditor"
                }
            ]
        },

        {
            "before": ["<leader>", "h"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.focusFirstEditorGroup"
                }
            ]
        },
        {
            "before": ["<leader>", "l"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.focusSecondEditorGroup"
                }
            ]
        },
        {
            "before": ["<ESC>"],
            "after": [],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        },
        {
            "before": ["<leader>", "e"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.toggleSidebarVisibility"
                }
            ]
        },
        {
            "before": ["<leader>", "t"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.terminal.toggleTerminal"
                }
            ]
        },
        {
            "before": ["<leader>", "f"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.toggleFullScreen"
                }
            ]
        },
        {
            "before": ["<leader>", "a"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.toggleActivityBarVisibility"
                }
            ]
        },
        {
            "before": ["<leader>", "g"],
            "after": [],
            "commands": [
                {
                    "command": "lazygit.openLazygit"
                }
            ]
        },
        {
            // Used for vim easymotion
            "before": ["s"],
            "after": ["leader", "leader", "/"]
        },
        {
            // used by Lead plugin
            "before": ["S"],
            "commands": ["leap.find"]
        },
        {
            // Markdown preview
            "before": ["<leader>", "m", "p"],
            "commands": ["markdown.showPreviewToSide"]
        },
        {
            // Markdown generate table of content
            "before": ["<leader>", "m", "g"],
            "commands": ["extension.we-three.markdownToc"]
        }
    ],

    // Rainbow plugin / indent
    "indentRainbow.indicatorStyle": "light",
    "indentRainbow.lightIndicatorStyleLineWidth": 1,

    // FORMATTER
    // TODO: set formatter per language (e.g. prittier markdown, others for python, golang, etc.)
    "prettier.tabWidth": 4,
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    },

    // LINTER
    "markdownlint.config": {
        "default": true,
        "MD007": { "indent": 4 },
        "MD030": false,
        "MD033": false,
        "no-hard-tabs": false
    }
}
